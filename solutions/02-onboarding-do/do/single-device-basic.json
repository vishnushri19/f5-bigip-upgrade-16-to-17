{
  "$schema": "https://raw.githubusercontent.com/F5Networks/f5-declarative-onboarding/master/src/schema/latest/base.schema.json",
  "schemaVersion": "1.36.0",
  "class": "Device",
  "async": true,
  "label": "Single BIG-IP basic onboarding - system and network",
  "Common": {
    "class": "Tenant",
    "hostname": "bigip01.example.com",
    "myDns": {
      "class": "DNS",
      "nameServers": [
        "8.8.8.8",
        "8.8.4.4"
      ],
      "search": [
        "example.com"
      ]
    },
    "myNtp": {
      "class": "NTP",
      "servers": [
        "0.pool.ntp.org",
        "1.pool.ntp.org"
      ],
      "timezone": "America/Chicago"
    },
    "internal": {
      "class": "VLAN",
      "tag": 100,
      "mtu": 1500,
      "interfaces": [
        {
          "name": "1.1",
          "tagged": false
        }
      ]
    },
    "internal-self": {
      "class": "SelfIp",
      "address": "10.1.10.10/24",
      "vlan": "internal",
      "allowService": "default",
      "trafficGroup": "traffic-group-local-only"
    },
    "defaultRoute": {
      "class": "Route",
      "gw": "10.1.10.1",
      "network": "default",
      "mtu": 1500
    }
  }
}
