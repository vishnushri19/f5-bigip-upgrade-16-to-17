{
  "$schema": "https://raw.githubusercontent.com/F5Networks/f5-declarative-onboarding/master/src/schema/latest/base.schema.json",
  "schemaVersion": "1.36.0",
  "class": "Device",
  "async": true,
  "label": "HA BIG-IP pair basic onboarding - system, network, and HA",
  "Common": {
    "class": "Tenant",

    "//info": "DEVICE-LOCAL OBJECTS (hostname, DNS, NTP) WILL BE PARAMETERIZED PER DEVICE",

    "hostname": "bigip-ha.example.com",

    "myDns": {
      "class": "DNS",
      "nameServers": [
        "8.8.8.8",
        "8.8.4.4"
      ],
      "search": [
        "example.com"
      ]
    },

    "myNtp": {
      "class": "NTP",
      "servers": [
        "0.pool.ntp.org",
        "1.pool.ntp.org"
      ],
      "timezone": "America/Chicago"
    },

    "//network": "NETWORK LAYER: one shared VLAN with a local Self IP (per device) and one floating Self IP (moves with active device).",

    "internal": {
      "class": "VLAN",
      "tag": 200,
      "mtu": 1500,
      "interfaces": [
        {
          "name": "1.1",
          "tagged": false
        }
      ]
    },

    "internal-self": {
      "class": "SelfIp",
      "address": "10.2.20.10/24",
      "vlan": "internal",
      "allowService": "default",
      "trafficGroup": "traffic-group-local-only"
    },

    "floating-internal-self": {
      "class": "SelfIp",
      "address": "10.2.20.20/24",
      "vlan": "internal",
      "allowService": "default",
      "trafficGroup": "traffic-group-1"
    },

    "defaultRoute": {
      "class": "Route",
      "gw": "10.2.20.1",
      "network": "default",
      "mtu": 1500
    },

    "//ha": "HA LAYER: basic sync-failover device group. Members are the BIG-IP hostnames; config-sync IPs will be added later via device-specific settings.",
    "deviceGroup": {
      "class": "DeviceGroup",
      "type": "sync-failover",
      "members": [
        "bigip1.example.com",
        "bigip2.example.com"
      ],
      "auto
